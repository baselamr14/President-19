<odoo>
    <record id="asset_move_form_view" model="ir.ui.view">
        <field name="name">asset.move.form.view</field>
        <field name="model">asset.move.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="asset_id" invisible="1"/>
                            <field name="current_location_id"/>
                        </group>
                        <group>
                            <field name="destination_location_id" required="1"/>
                        </group>
                        <group>
                            <field name="note"/>
                        </group>
                    </group>
                    <footer>
                        <button name="move_asset" string="Move" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="asset_move_wizard_action" model="ir.actions.act_window">
        <field name="name">Asset Move</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.move.wizard</field>
        <field name="view_mode">form</field>
    </record>
</odoo>