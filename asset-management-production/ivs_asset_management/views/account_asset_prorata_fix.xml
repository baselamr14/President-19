<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_asset_form_prorata_fix" model="ir.ui.view">
        <field name="name">account.asset.prorata.fix</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">

            <!-- wherever prorata_date exists in the view -->
            <xpath expr="//field[@name='prorata_date']" position="attributes">
                <attribute name="invisible">prorata_computation_type == 'none'</attribute>
                <attribute name="required">prorata_computation_type != 'none'</attribute>
            </xpath>

        </field>
    </record>

</odoo>



