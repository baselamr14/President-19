<odoo>
    <data noupdate="1">
        <record id="paperformat_asset_sheet" model="report.paperformat">
            <field name="name">A4 Asset Sheet</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="disable_shrinking" eval="True"/>
            <field name="dpi">96</field>
        </record>

    </data>

    <record id="asset_qr_report" model="ir.actions.report">
        <field name="name">Asset QR</field>
        <field name="model">account.asset</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ivs_asset_management.asset_qr_template</field>
        <field name="report_file">ivs_asset_management.asset_qr_template</field>
        <field name="paperformat_id" ref="ivs_asset_management.paperformat_asset_sheet"/>
    </record>


    <template id="internal_layout_asset">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-out="0"/>
        </div>
    </template>

    <template id="asset_qr_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="ivs_asset_management.report_asset_qr_template"/>
            </t>
        </t>
    </template>


    <template id="report_asset_qr_template">
        <t t-call="ivs_asset_management.internal_layout_asset">
            <t t-set="qrcode" t-value="o.generate_qr_code()"/>
            <div class="page">
                <div class="o_label_full">
                    <div class="o_label_data">
                        <div class="text-center">
                            <t t-if="o.asset_class_id.height &lt; o.asset_class_id.width">
                                <img class="img" t-attf-src="data:image/jpg;base64,#{o.qr_code}"
                                     t-attf-style="width:#{o.asset_class_id.height}cm;height:#{o.asset_class_id.height}cm;"/>
                            </t>
                            <t t-else="">
                                <img class="img" t-attf-src="data:image/jpg;base64,#{o.qr_code}"
                                     t-attf-style="width:#{o.asset_class_id.width}cm;height:#{o.asset_class_id.width}cm;"/>
                            </t>
                            <div class="text-center">
                                <t t-if="o.asset_class_id.height &lt; o.asset_class_id.width">
                                    <t t-if="o.asset_class_id.height &gt; 15 ">
                                        <t t-set="fontsize" t-value="o.asset_class_id.font_size"/>
                                        <div class="text-center"
                                             t-attf-style="font-size:#{fontsize}px;;overflow: visible;padding-left:50px;margin-top:20px;display: inline-block;">
                                            <span t-out="o.name"/>
                                            <br/>
                                            <span t-out="o.asset_code"/>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <t t-set="fontsize" t-value="o.asset_class_id.font_size"/>
                                        <div class="text-center"
                                             t-attf-style="font-size:#{fontsize}px;overflow: visible;display: inline-block;">
                                            <span t-out="o.name"/>
                                            <br/>
                                            <span t-out="o.asset_code"/>
                                        </div>
                                    </t>
                                </t>
                                <t t-else="">
                                    <t t-if="o.asset_class_id.width &gt; 15">
                                        <t t-set="fontsize" t-value="o.asset_class_id.font_size"/>
                                        <div class="text-center"
                                             t-attf-style="font-size:#{fontsize}px;overflow: visible;padding-left:50px;margin-top:-85px;display: inline-block;">
                                            <span t-out="o.name"/>
                                            <br/>
                                            <span t-out="o.asset_code"/>
                                        </div>
                                    </t>
                                    <t t-else="">
                                        <t t-set="fontsize" t-value="o.asset_class_id.font_size"/>
                                        <div class="text-center"
                                             t-attf-style="font-size:#{fontsize}px;overflow: visible;text-overflow: ellipsis;display: inline-block;">
                                            <span t-out="o.name"/>
                                            <br/>
                                            <span t-out="o.asset_code"/>
                                        </div>
                                    </t>

                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>


</odoo>