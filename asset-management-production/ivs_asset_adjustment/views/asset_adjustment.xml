<odoo>
    <record id="asset_adjustment_form_view" model="ir.ui.view">
        <field name="name">asset.adjustment.form.view</field>
        <field name="model">asset.adjustment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start" type="object" string="Start"
                            states="draft" class="oe_highlight"/>
                    <button name="start_adjustment" type="object" string="Start Adjustment"
                            states="running" class="oe_highlight"/>
                    <button name="action_confirm" type="object" string="Confirm"
                            states="running" class="oe_highlight"/>
                    <button name="action_approve" type="object" string="Approve"
                            states="confirm" class="oe_highlight"
                            groups="ivs_asset_adjustment.asset_adjustment_manager"/>
                    <button name="action_set_to_draft" type="object" string="Reset"
                            states="confirm,cancel"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            states="confirm"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running,confirm"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_id" attrs="{'readonly':[('state','in',['confirm','approve'])]}"/>
                            <field name="method" attrs="{'readonly':[('state','in',['confirm','approve'])]}"/>
                        </group>
                        <group>
                            <field name="date" attrs="{'readonly':[('state','in',['confirm','approve'])]}"/>
                            <field name="company_id" invisible="1"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"
                                   attrs="{'readonly':[('state','in',['confirm','approve'])]}"/>
                            <field name="confirmed_user_id" invisible="1"/>
                            <field name="approved_user_id"  invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Assets">
                            <field name="line_ids">
                                <tree>
                                    <field name="asset_location_id"/>
                                    <field name="asset_id"/>
                                    <field name="asset_code"/>
                                    <field name="different_asset_location_id"/>
                                    <field name="is_exist"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'open_attachments': True}"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="asset_adjustment_tree_view" model="ir.ui.view">
        <field name="name">asset.adjustment.tree.view</field>
        <field name="model">asset.adjustment</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="location_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="asset_adjustment_search_view" model="ir.ui.view">
        <field name="name">asset.adjustment.search.view</field>
        <field name="model">asset.adjustment</field>
        <field name="arch" type="xml">
            <search string="">
                <filter name="active" string="Active" domain="[('active','=',True)]"/>
                <filter name="archived" string="Archived" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter
                            name="group_by_location"
                            string="Location"
                            context="{'group_by': 'location_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="asset_adjustment_view_action" model="ir.actions.act_window">
        <field name="name">Asset Adjustment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.adjustment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="asset_adjustment_menu" name="Asset Adjustment"
              parent="account.menu_finance_entries_management"
              action="asset_adjustment_view_action" sequence="102"/>
</odoo>