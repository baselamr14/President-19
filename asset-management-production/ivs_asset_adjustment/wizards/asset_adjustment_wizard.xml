<odoo>
    <record id="asset_adjustment_wizard_form_view" model="ir.ui.view">
        <field name="name">asset.adjustment.wizard.view</field>
        <field name="model">asset.adjustment.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="adjustment_id" invisible="1"/>
                            <label for="adjustment_method_web"
                                   class="d-none d-sm-none d-md-none d-lg-block d-xl-block d-xxl-block"/>
                            <div class="d-none d-sm-none d-md-none d-lg-block d-xl-block d-xxl-block">
                                <field name="adjustment_method_web"/>
                            </div>
                            <div class="d-block d-sm-block d-md-block d-lg-none d-xl-none d-xxl-none">
                                <field name="adjustment_method"/>
                            </div>
                            <field name="device" invisible="1"/>
                        </group>
                        <group>
                            <field name="message" nolabel="1" colspan="2" readonly="1" force_save="1"
                                   attrs="{'invisible':[('adjustment_method','!=','manual')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="code" attrs="{'invisible':[('adjustment_method','!=','manual')]}"/>
                            <field name="excel_file" attrs="{'invisible':[('adjustment_method','!=','import')]}"
                                   filename="file_name"/>
                            <field name="file_name" invisible="1"/>
                            <field name="asset_id" widget="many2one_barcode"
                                   attrs="{'invisible':[('adjustment_method','!=','qr_scan')]}"/>
                            <field name="scanned_asset_ids" readonly="1" force_save="1"
                                   widget="many2many_tags"
                                   attrs="{'invisible':[('adjustment_method','!=','qr_scan')]}"/>
                        </group>
                        <group>
                            <button name="action_done"
                                    attrs="{'invisible':[('adjustment_method','not in',['manual'])]}"
                                    string="Done" type="object" class="oe_highlight"/>
                            <div style="width: 200px;">
                                <button name="generate_sample_excel_file"
                                        attrs="{'invisible':[('adjustment_method','!=','import')]}"
                                        string="Download Sample Sheet" type="object"/>
                            </div>
                        </group>
                    </group>


                    <footer>
                        <button name="import_adjustment_sheet"
                                attrs="{'invisible':[('adjustment_method','!=','import')]}"
                                string="Confirm" type="object" class="oe_highlight"/>
                        <button string="Confirm" class="oe_highlight" special="save"
                                attrs="{'invisible':[('adjustment_method','not in',['manual','qr_scan'])]}"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="asset_adjustment_wizard_action" model="ir.actions.act_window">
        <field name="name">Asset Adjustment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.adjustment.wizard</field>
        <field name="view_mode">form</field>
    </record>
</odoo>